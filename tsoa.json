{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/app/modules/**/*/*.controller.ts"],
  "spec": {
    "specVersion": 3,
    "outputDirectory": "./src/swagger"
  },
  "swagger": {
    "outputDirectory": ".",
    "entryFile": "./src/index.ts"
  },
  "routes": {
    "basePath": "/",
    "routesDir": "./src",
    "middleware": "express"
  }
}
